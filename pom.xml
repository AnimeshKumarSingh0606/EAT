<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.jboss</groupId>
        <artifactId>jboss-parent</artifactId>
        <version>16</version>
    </parent>

    <groupId>org.jboss.as</groupId>
    <artifactId>jboss-as-additional-testsuite</artifactId>
    <packaging>pom</packaging>
    <version>1.0.0.Final-redhat-SNAPSHOT</version>

    <name>JBoss Application Server Test Suite: Additional Testsuite</name>
    
    <properties>
        <version.org.jboss.arquillian.container.managed>7.2.0.Final</version.org.jboss.arquillian.container.managed>
        <version.org.wildfly.arquillian>1.0.0.Alpha5</version.org.wildfly.arquillian>
        <version.junit>4.11</version.junit>
        <version.org.apache.commons>1.3.2</version.org.apache.commons>   
        <xnio.version>3.1.0.Final</xnio.version>
        <jboss.dist>${JBOSS_HOME}</jboss.dist>
        <!-- Logging config -->
        <testLogToFile>true</testLogToFile>
    </properties>
    
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${version.junit}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-io</artifactId>
            <version>${version.org.apache.commons}</version>
        </dependency>
        <dependency>
            <groupId>org.wildfly.security</groupId>
            <artifactId>wildfly-elytron</artifactId>
            <version>1.0.0.Alpha1</version>
        </dependency>
        <dependency>
            <groupId>org.jboss.xnio</groupId>
            <artifactId>xnio-api</artifactId>
            <version>${xnio.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.jboss.xnio</groupId>
            <artifactId>xnio-nio</artifactId>
            <version>${xnio.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <modules>
        <module>remoting</module>
        <!--module>datasource</module-->
    </modules>
    
    <profiles>
        <profile>
            <id>eap.testsuite</id>
            <activation>
                <property>
                    <name>eap</name>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.jboss.as</groupId>
                    <artifactId>jboss-as-arquillian-container-managed</artifactId>
                    <version>${version.org.jboss.arquillian.container.managed}</version>
                </dependency>
                <dependency>
                    <groupId>org.jboss.arquillian.junit</groupId>
                    <artifactId>arquillian-junit-container</artifactId>
                    <version>1.0.0.Final</version>
                    <scope>test</scope>
                </dependency>
                <dependency>
                    <groupId>org.jboss.remoting3</groupId>
                    <artifactId>jboss-remoting</artifactId>
                    <version>3.3.4.Final-redhat-1</version>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>wildfly.testsuite</id>
            <activation>
                <property>
                    <name>wildfly</name>
                </property>
            </activation>
            
            <properties>
                <jboss.home>wildfly/build/target/wildfly-10.0.0.Alpha2-SNAPSHOT</jboss.home>
            </properties>
            
            <dependencies>
                <dependency>
                    <groupId>org.wildfly.arquillian</groupId>
                    <artifactId>wildfly-arquillian-container-managed</artifactId>
                    <version>${version.org.wildfly.arquillian}</version>
                </dependency>
                <dependency>
                    <groupId>org.jboss.arquillian.junit</groupId>
                    <artifactId>arquillian-junit-container</artifactId>
                    <version>1.1.2.Final-wildfly-1</version>
                    <scope>test</scope>
                </dependency>
                <dependency>
                    <groupId>org.jboss.remoting</groupId>
                    <artifactId>jboss-remoting</artifactId>
                    <version>4.0.9.Final</version>
                </dependency>
            </dependencies>
        </profile>

        <!-- -Dats.web -->
        <profile>
            <id>additional.testsuite.web</id>
            <activation>
                <property>
                    <name>ats.web</name>
                </property>
            </activation>
            <modules>
                <module>web</module>
            </modules>
        </profile>

    </profiles>
    
    <build>
        <plugins>

            <!--plugin>
                <artifactId>exec-maven-plugin</artifactId>
                <groupId>org.codehaus.mojo</groupId>
                <executions>
                    <execution>
                        <id>download github sources</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${basedir}/src/test/scripts/script.sh</executable>
                        </configuration>
                    </execution>
                </executions>
            </plugin-->

            <!-- General surefire configuration. Applies to submodules too. -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <!-- Prevent test and server output appearing in console. -->
                    <redirectTestOutputToFile>${testLogToFile}</redirectTestOutputToFile>

                    <!-- System properties passed to test cases -->
                    <systemPropertyVariables combine.children="append">
                        <server.jvm.args>${surefire.system.args}</server.jvm.args>
                    </systemPropertyVariables>

                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <inherited>true</inherited>
                <extensions>true</extensions>
            </plugin>
        </plugins>
    </build>
</project>
