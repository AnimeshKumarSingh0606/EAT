<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.jboss</groupId>
        <artifactId>jboss-parent</artifactId>
        <version>16</version>
    </parent>

    <groupId>org.jboss.as</groupId>
    <artifactId>jboss-as-additional-testsuite</artifactId>
    <packaging>pom</packaging>
    <version>1.0.0.Final-redhat-SNAPSHOT</version>

    <name>JBoss Application Server Test Suite: Additional Testsuite</name>
    
    <properties>
        <version.org.jboss.arquillian.container.managed>7.2.0.Final</version.org.jboss.arquillian.container.managed>
        <version.org.wildfly.arquillian>1.0.0.Alpha5</version.org.wildfly.arquillian>
        <version.junit>4.11</version.junit>
        <version.org.apache.commons>1.3.2</version.org.apache.commons>   
        <xnio.version>3.1.0.Final</xnio.version>
        <jboss.home.env>${JBOSS_HOME}</jboss.home.env>
        <eap.build.directory>eap/build/target/jboss-as-7.5.1.Final-redhat-SNAPSHOT</eap.build.directory>
        <wildfly.build.directory>wildfly/build/target/wildfly-10.0.0.Alpha3-SNAPSHOT</wildfly.build.directory>
        <surefire.memory.args>-Xmx512m -XX:MaxPermSize=256m</surefire.memory.args>
        <surefire.system.args>${surefire.memory.args} -Djboss.dist=${basedir}/target/jbossas</surefire.system.args>
        <!-- Logging config -->
        <testLogToFile>true</testLogToFile>
    </properties>
    
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-io</artifactId>
                <version>${version.org.apache.commons}</version>
            </dependency>
            <dependency>
                <groupId>org.wildfly.security</groupId>
                <artifactId>wildfly-elytron</artifactId>
                <version>1.0.0.Alpha1</version>
            </dependency>
            <dependency>
                <groupId>org.jboss.xnio</groupId>
                <artifactId>xnio-api</artifactId>
                <version>${xnio.version}</version>
                <scope>compile</scope>
            </dependency>
            <dependency>
                <groupId>org.jboss.xnio</groupId>
                <artifactId>xnio-nio</artifactId>
                <version>${xnio.version}</version>
                <scope>test</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>
    
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${version.junit}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <modules>
        <module>remoting</module>
        <!--module>datasource</module-->
    </modules>
    
    <profiles>
        <profile>
            <id>eap.testsuite</id>
            <activation>
                <property>
                    <name>eap</name>
                </property>
            </activation>

            <properties>
                <jboss.home>${eap.build.directory}</jboss.home>
            </properties>

            <dependencyManagement>
                <dependencies>
                    <dependency>
                        <groupId>org.jboss.remoting3</groupId>
                        <artifactId>jboss-remoting</artifactId>
                        <version>3.3.4.Final</version>
                    </dependency>
                </dependencies>
            </dependencyManagement>
            
            <dependencies>
                <dependency>
                    <groupId>org.jboss.as</groupId>
                    <artifactId>jboss-as-arquillian-container-managed</artifactId>
                    <version>${version.org.jboss.arquillian.container.managed}</version>
                </dependency>
                <dependency>
                    <groupId>org.jboss.shrinkwrap</groupId>
                    <artifactId>shrinkwrap-api</artifactId>
                    <version>1.1.2.redhat-1</version>
                </dependency>
                <dependency>
                    <groupId>org.jboss.shrinkwrap</groupId>
                    <artifactId>shrinkwrap-spi</artifactId>
                    <version>1.1.2.redhat-1</version>
                </dependency>
                <dependency>
                    <groupId>org.jboss.shrinkwrap</groupId>
                    <artifactId>shrinkwrap-impl-base</artifactId>
                    <version>1.1.2.redhat-1</version>
                </dependency>
                <dependency>
                    <groupId>org.jboss.arquillian.junit</groupId>
                    <artifactId>arquillian-junit-container</artifactId>
                    <version>1.0.0.Final</version>
                    <scope>test</scope>
                </dependency>
            </dependencies>
            
            <build>
                <plugins>

                    <plugin>
                        <groupId>com.googlecode.maven-download-plugin</groupId>
                        <artifactId>maven-download-plugin</artifactId>
                        <version>1.1.0</version>
                        <inherited>false</inherited>
                        <executions>
                            <execution>
                                <id>download</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>wget</goal>
                                </goals>
                                <configuration>
                                    <url>http://thunder.sin2.redhat.com:8380/hudson/job/eap-6.4.x-build/lastSuccessfulBuild/artifact/build/target/jboss-as-7.5.1.Final-redhat-SNAPSHOT/*zip*/jboss-as-7.5.1.Final-redhat-SNAPSHOT.zip</url>
                                    <outputFileName>../eap/build/target/jboss-as-7.5.1.Final-redhat-SNAPSHOT.zip</outputFileName>
                                    <targetDirectory>${project.build.directory}</targetDirectory>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
            
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.6</version>
                        <inherited>false</inherited>
                        <executions>
                            <execution>
                                <id>prepare</id>
                                <phase>generate-resources</phase>
                                <configuration>
                                    <target>
                                        <unzip src="eap/build/target/jboss-as-7.5.1.Final-redhat-SNAPSHOT.zip" dest="eap/build/target/" />
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                            <execution>
                                <inherited>false</inherited>
                                <phase>generate-test-resources</phase>
                                <configuration>
                                    <target>
                                        <copy todir="${basedir}/target/jbossas" preservelastmodified="true">
                                            <fileset dir="${eap.build.directory}">
                                                <include name="**/**"/>
                                            </fileset>
                                        </copy>                            
                                    </target>
                                    <target>
                                        <copy todir="${basedir}/remoting/target/jbossas" preservelastmodified="true">
                                            <fileset dir="${eap.build.directory}">
                                                <include name="**/**"/>
                                            </fileset>
                                        </copy>                            
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    
                </plugins>
            </build>
            
        </profile>

        <profile>
            <id>wildfly.testsuite</id>
            <activation>
                <property>
                    <name>wildfly</name>
                </property>
            </activation>
            
            <properties>
                <jboss.home>${wildfly.build.directory}</jboss.home>
            </properties>
            
            <dependencyManagement>
                <dependencies>
                    <dependency>
                        <groupId>org.jboss.remoting</groupId>
                        <artifactId>jboss-remoting</artifactId>
                        <version>4.0.9.Final</version>
                    </dependency>
                </dependencies>
            </dependencyManagement>
            
            <dependencies>
                <dependency>
                    <groupId>org.wildfly.arquillian</groupId>
                    <artifactId>wildfly-arquillian-container-managed</artifactId>
                    <version>${version.org.wildfly.arquillian}</version>
                </dependency>
                <dependency>
                    <groupId>org.jboss.shrinkwrap</groupId>
                    <artifactId>shrinkwrap-api</artifactId>
                    <version>1.1.2</version>
                </dependency>
                <dependency>
                    <groupId>org.jboss.arquillian.junit</groupId>
                    <artifactId>arquillian-junit-container</artifactId>
                    <version>1.1.6.Final-wildfly-1</version>
                </dependency>
            </dependencies>
            
            <build>
                <plugins>

                    <plugin>
                        <groupId>com.googlecode.maven-download-plugin</groupId>
                        <artifactId>maven-download-plugin</artifactId>
                        <version>1.1.0</version>
                        <inherited>false</inherited>
                        <executions>
                            <execution>
                                <!-- the wget goal actually binds itself to this phase by default -->
                                <id>download</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>wget</goal>
                                </goals>
                                <configuration>
                                    <url>http://thunder.sin2.redhat.com:8380/hudson/job/wildfly-master-build/lastSuccessfulBuild/artifact/build/target/*zip*/wildfly-10.0.0.Alpha3-SNAPSHOT.zip</url>
                                    <outputFileName>../wildfly/build/target/wildfly-10.0.0.Alpha3-SNAPSHOT.zip</outputFileName>
                                    <!-- default target location, just to demonstrate the parameter -->
                                    <targetDirectory>${project.build.directory}</targetDirectory>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
            
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.6</version>
                        <inherited>false</inherited>
                        <executions>
                            <execution>
                                <id>prepare</id>
                                <phase>generate-test-sources</phase>
                                <configuration>
                                    <target>
                                        <unzip src="wildfly/build/target/wildfly-10.0.0.Alpha3-SNAPSHOT.zip" dest="wildfly/build/target/" />
                                    </target>
                                     <target>
                                        <unzip src="wildfly/build/target/target/wildfly-10.0.0.Alpha3-SNAPSHOT.zip" dest="wildfly/build/target/" />
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                            <execution>
                                <inherited>false</inherited>
                                <phase>generate-test-resources</phase>
                                <configuration>
                                    <target>
                                        <copy todir="${basedir}/target/jbossas" preservelastmodified="true">
                                            <fileset dir="${wildfly.build.directory}">
                                                <include name="**/**"/>
                                            </fileset>
                                        </copy> 
                                    </target>
                                    <target>
                                        <copy todir="${basedir}/remoting/target/jbossas" preservelastmodified="true">
                                            <fileset dir="${wildfly.build.directory}">
                                                <include name="**/**"/>
                                            </fileset>
                                        </copy>                              
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
            
                </plugins>
            </build>
            
        </profile>

    </profiles>
    
    <build>
        
        <plugins>

